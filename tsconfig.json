
{
  "compilerOptions": {
      "module":"es2015",
      "target": "es2015",
      "jsx": "react",
      "rootDir": "src",
      "outDir": "build",
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "preserveConstEnums": true,
      "allowJs": true,

      // TODO how/where to use these instead of noUnusedLocals/noUnusedParameters?
      // "no-unused-variable": true,
      // "no-unused-vars": true,

      // "noUnusedLocals": true,
      // "noUnusedParameters": true,

      "noImplicitReturns": true,
      "skipLibCheck": true,
      "moduleResolution":"Node",
      "strictNullChecks": true,
      "alwaysStrict": true,
      "noImplicitThis": true
  },
  "filesGlob": [
      "typings/index.d.ts",
      "src/**/*.ts",
      "src/**/*.tsx",
      "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "types": [
    "react",
    "react-dom",
    "react-native",
    "jest"
  ],
  "exclude":[
      "build", 
      "node_modules",
      "jest.config.js",
      "App.js",
      "babel.config.js"
  ],
  "compileOnSave": false
}